<Window x:Class="WPF_Exercise_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Exercise_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Margin="10">
        <local:UserControlReadOnly  x:Name="readOnly" Visibility="Visible" />
        <local:UserControlAuto  x:Name="auto" Visibility="Hidden" />
        <local:UserControlCustomize  x:Name="customize" Visibility="Hidden" />
        <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.509,0.657">
            <Button Content="Read Only" HorizontalAlignment="Left" Margin="150,320,50,0" VerticalAlignment="Top" Width="120" Click="Button_Click1" />
            <Button Content="Auto" HorizontalAlignment="Left" Margin="0,320,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click2" />
            <Button Content="Customize" HorizontalAlignment="Left" Margin="50,320,0,50" VerticalAlignment="Top" Width="120" Click="Button_Click3" />
        </StackPanel>
    </Grid>
</Window>
